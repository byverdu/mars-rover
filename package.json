{
  "name": "root",
  "private": true,
  "scripts": {
    "lint": "./node_modules/.bin/eslint . --ext .ts,.tsx",
    "prettier": "./node_modules/.bin/prettier \"packages/**/*.{js,jsx,ts,tsx,json,css,scss,md}\" --write",
    "test": "jest --config=jest.config.js --no-cache"
  },
  "lint-staged": {
    "packages/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "post-commit": "npm run lint",
      "pre-push": "CI=true && npm run lint && npm test"
    }
  },
  "devDependencies": {
    "@babel/preset-env": "^7.5.5",
    "@babel/preset-react": "^7.0.0",
    "@types/jest": "^24.0.15",
    "@types/node": "^12.6.8",
    "@typescript-eslint/eslint-plugin": "^1.12.0",
    "@typescript-eslint/parser": "^1.12.0",
    "babel-eslint": "^10.0.2",
    "babel-jest": "^24.8.0",
    "concurrently": "^4.1.1",
    "eslint": "^6.0.1",
    "eslint-config-react-app": "^4.0.1",
    "eslint-plugin-flowtype": "^3.12.1",
    "eslint-plugin-import": "^2.18.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.14.2",
    "eslint-plugin-react-hooks": "^1.6.1",
    "husky": "^3.0.1",
    "jest": "^24.8.0",
    "lerna": "^3.10.5",
    "lint-staged": "^9.2.0",
    "prettier": "^1.18.2",
    "react": "^16.8.6",
    "typescript": "^3.5.3",
    "uuid": "^3.3.2"
  }
}
