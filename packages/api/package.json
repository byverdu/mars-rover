		"lib": "lib",
		"test": "__tests__"
  },
  "scripts": {
    "lint": "./node_modules/.bin/eslint . --ext .ts,.tsx"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write",
      "git add"
