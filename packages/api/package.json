{
		"name": "@mars-rover/api",
		"version": "0.0.0",
		"description": "web server and api",
		"author": "byverdu <byverdu@gmail.com>",
		"homepage": "https://github.com/byverdu/mars-rover#readme",
		"license": "ISC",
		"main": "lib/server.js",
		"directories": {
				"lib": "lib",
				"test": "__tests__"
		},
		"scripts": {
				"lint": "./node_modules/.bin/eslint . --ext .ts,.tsx",
				"tsc": "tsc",
				"test:api:watch": "jest --config=jest.config.js __tests__ --watchAll",
				"test:api": "jest --config=jest.config.js __tests__ --watchAll=false --coverage"
		},
		"lint-staged": {
				"src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
						"prettier --write",
						"git add"
				]
		},
		"husky": {
				"hooks": {
						"pre-commit": "lint-staged",
						"post-commit": "npm run lint",
						"pre-push": "CI=true && npm run lint"
				}
		},
		"files": [
				"lib"
		],
		"repository": {
				"type": "git",
				"url": "git+https://github.com/byverdu/mars-rover.git"
		},
		"bugs": {
				"url": "https://github.com/byverdu/mars-rover/issues"
		},
		"dependencies": {
				"body-parser": "^1.19.0",
				"express": "^4.17.1",
				"husky": "^3.0.1",
				"mongoose": "^5.6.5",
				"typescript": "^3.5.3"
		},
		"devDependencies": {
				"@babel/preset-typescript": "^7.3.3",
				"@types/body-parser": "^1.17.0",
				"@types/express": "^4.17.0",
				"@types/jest": "^24.0.15",
				"@types/mongoose": "^5.5.8",
        "@typescript-eslint/parser": "^1.12.0",
        "eslint": "^6.0.1",
        "eslint-config-react-app": "^4.0.1",
        "eslint-plugin-flowtype": "^3.12.1",
        "eslint-plugin-import": "^2.18.0",
        "eslint-plugin-jsx-a11y": "^6.2.3",
        "eslint-plugin-react": "^7.14.2",
        "eslint-plugin-react-hooks": "^1.6.1",
				"jest": "^24.8.0",
				"mongodb-memory-server": "^5.1.5",
				"ts-jest": "^24.0.2",
				"ts-node": "^8.3.0",
				"ts-node-dev": "^1.0.0-pre.40"
		}
}
