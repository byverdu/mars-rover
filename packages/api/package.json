		"husky": "^3.0.1",
		"mongoose": "^5.6.5"
	},
	"devDependencies": {
    "@types/body-parser": "^1.17.0",
		"@types/express": "^4.17.0",
		"@types/mongoose": "^5.5.8",
		"@typescript-eslint/parser": "^1.12.0",
    "eslint-config-react-app": "^4.0.1",
		"mongodb-memory-server": "^5.1.5",
